{% extends '@layout/adminLTE.html.twig' %}

{% block title %}SoN PHP7+DDD{% endblock %}
{% block page_header %}{{ headerTitle }}{% endblock %}
{% block page_header_description %}{{ headerDescription }}{% endblock %}

{% block content %}
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <a href="{{ url('customer.create') }}" class="btn btn-app">
                <i class="fa fa-plus-circle"></i> Novo
            </a>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table class="table table-responsive">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Ação</th>
                </tr>
                </thead>
                <tbody>
                {% if customers %}
                    {% for customer in customers %}
                        <tr>
                            <td>{{ customer.id }}</td>
                            <td>{{ customer.name }}</td>
                            <td>{{ customer.email }}</td>
                            <td>
                                <a href="{{ url('customer.update', {id: customer.id}) }}" class="btn btn-xs"><i class="icon fa fa-edit"></i> Editar</a>
                                <a href="{{ url('customer.delete', {id: customer.id}) }}" class="btn btn-xs text-danger"><i class="icon fa fa-times"></i> Excluir</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="5">Nenhum registro encotrado!</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer"></div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
{% endblock %}
