{% set flashMessageTypes = {'default': 'aviso', 'success': 'sucesso', 'warning': 'aviso', 'error': 'erro', 'info': 'Informação'} %}
{% set flashMessageIcon = {'default': 'fa fa-bell', 'success': 'fa fa-check', 'warning': 'fa fa-warning', 'error': 'fa fa-times', 'info' : 'fa fa-info'} %}
{% if flashMessages is defined and flashMessages|length > 0 %}
    {% for key, flashMessage in flashMessages %}
        {% if flashMessage %}
            <div class="alert alert-{{ key }} alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="icon {{ flashMessageIcon[key] }}"></i> {{ flashMessageTypes[key]|capitalize }}
                    !
                </h4>
                {{ flashMessage }}
            </div>
        {% endif %}
    {% endfor %}
{% endif %}